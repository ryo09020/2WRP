 <% book.book_comments.each do |book_comment| %>
    <div class="row m-1">
        <div class="col">
          <%= image_tag book_comment.user.get_profile_image(50,50) %>
          <%= book_comment.user.name %>
          <%= book_comment.comment %>
          <% if current_user==book_comment.user %>
            <%=link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: 'btn btn-sm btn-danger', method: :delete, remote: true  %>
          <% end %>
        </div>
    </div>
<% end %>
              
              
<%= form_with model: [book, book_comment], local: false do |f| %>
  <%= f.text_area :comment,class:'form-control', placeholder: "コメントをここに" %>
  <%= f.submit "送信" %>
<% end %>