<div class="container">
  <div>
  <%= flash[:notice] %>
  </div>
  <%= render 'template/list', user: @user ,new_book: @new_book %>
    <!-- ユーザーの投稿一覧 -->

  

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th>Favorite</th>
                        <th>Comment</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>

                        <tr>
                            <td>
                              <div>
                                <%= link_to book_path(@book.id) do %>
                                  <%= image_tag @book.get_image(90,90) %>
                                <% end %>
                              </div>
                              <%= link_to user_path(@user.id) do %>
                                <%=@user.name%>
                              <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(@book.id) do %>
                                    <%= @book.title %>
                                <% end %>
                            </td>
                            <td>
                              <%= @book.body %>
                            </td>
                            <td id="favorite_btn_<%= @book.id %>">
                             
                              <%= render 'favorites/favorite', book: @book %>
                             
                            </td>
                            </td>
                            <td>
                              <p>コメント数：<%= @book.book_comments.count %></p>
                            </td>

                            <td>
                             <% if current_user==@book.user %>
                                <%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-success" %>
                                <%= link_to "Destroy",book_path(@book.id),class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                             <% end %>
                            </td>
                            <td>

                            </td>
                        </tr>

                </tbody>
            </table>

            
              
              
            <div id=comment_<%= @book.id %>>
              <%=render 'book_comments/comment', {book: @book, book_comment: @book_comment} %>
            </div>


    </div>
  </div>
</div>




